<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Manage products</title>
</head>
<!--BS3-->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap-theme.min.css" integrity="sha384-6pzBo3FDv/PJ8r2KRkGHifhEocL+1X2rVCTTkUfGk7/0pbek5mMa1upzvWbrUbOZ" crossorigin="anonymous"><link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

<form class="form-inline " action="/search" method="POST">
<div class="navbar navbar-default">
    <div class="container">
        <h2>
            <a style="color: black" href="/"><span class="glyphicon glyphicon-home col-lg-1"></span></a>
            <span class="col-lg-8">ATN Management</span>
            <span class="col-lg-3" ><input class="form-control " type="text" name="product_name" placeholder="Search">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search "></i></button></span>
        </h2>
    </div>
</div>
</form>

<div class="container">

    <a class="btn btn-default" href="/insert">Insert</a>

    <table class="table table-bordered table-hover table-condensed">
        <thead>
        <tr>
            <th style="text-align: center">Product</th>
            <th style="text-align: center">Image</th>
            <th style="text-align: center">Color</th>
            <th style="text-align: center">Price</th>
            <th style="text-align: center">Action</th>
        </tr>
        </thead>
        {{# each products}}
            <tbody>
            <tr>
                <td style="text-align: center"><h4>{{product_name}}</h4></td>
                <td style="text-align: center"><img src="/photos/{{_id}}" class="rounded" alt="" height="100px" width="100px"></td>
                <td style="text-align: center"><h4>{{[color]}}</h4></td>
                <td style="text-align: center"><h4>{{[price]}}$</h4></td>
                <td style="text-align: center">
                    <a href="/edit?id={{_id}}" class="btn btn-default">Udpate</a>
                    <a href="/delete?id={{_id}}" class="btn btn-danger" method="POST">Delete</a>
                </td>
            </tr>
            </tbody>
        {{/each}}
    </table>
</div>

</body>
</html>